\NewDocumentCommand{\thecoverpage}{}{%%
  \begin{titlepage}%
    \noindent\tc@covertopbox%
    \vfill%
	  \iftcif@report{%%
		\@ifundefined{tc@studentA@advisor}{}{%%
          \hspace*{\fill}\parbox[b]{\tcdef@cover@advisorwidth}{\tccover@reportadvisorinfo}%
		  \vfill%
        }%%
	  }%%
     \else\fi
    \centerline{\tc@city}%
	  \centerline{\tc@date}%
  \end{titlepage}%%
	\tc@pagebreak
}%
